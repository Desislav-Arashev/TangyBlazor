@page "/learnblazor/demoproduct"

<h3 class="text-primary">DemoProduct</h3>

<div class="border p-2 mt-2" style="background-color:azure">
    <div class="row">
        @foreach (var product in Products)
        {
            <div class="bg-light border m-1 col-5">
                <h4 class="text-secondary">Product - @product.Id</h4>
                Name - @product.Name
                <br />
                Show Properties: <input type="checkbox" @bind-value="product.IsActive" checked="@product.IsActive" />
                <br />
                @if (product.IsActive)
                {
                    @foreach (var productProp in product.ProductProperties)
                    {
                        <p>
                            @productProp.Key - @productProp.Value
                        </p>
                    }
                }
                <br/>
                <_EditDeleteButton IsActive="@product.IsActive">
                </_EditDeleteButton>

            </div>
        }
    </div>
</div>

@code {
    private string selectedProp = "";

    List<Demo_Product> Products = new();

    protected override void OnInitialized()
    {
        Products.Add(new()
            {
                Id = 1,
                Name = "Midnight Blaze",
                IsActive = false,
                Price = 10.99,
                ProductProperties = new()
            {
                new Demo_ProductProp() { Id = 1, Key = "Color", Value = "Black" },
                new Demo_ProductProp() { Id = 2, Key = "Flavor", Value = "Midnight Blaze" },
                new Demo_ProductProp() { Id = 3, Key = "Size", Value = "20oz" },
            }
            });

        Products.Add(new()
            {
                Id = 2,
                Name = "Blossom Lily",
                IsActive = true,
                Price = 5.99,
                ProductProperties = new()
            {
                new Demo_ProductProp() { Id = 1, Key = "Color", Value = "Black" },
                new Demo_ProductProp() { Id = 2, Key = "Flavor", Value = "Rose Jasmine" },
                new Demo_ProductProp() { Id = 3, Key = "Size", Value = "20oz" },
            }
            });
    }
} 